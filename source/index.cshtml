@{
    Layout = "default";
    Title = "FsBlog";
    Description = "A blog aware static site generator in mostly F#";
}
@using System.Linq

<div class="col-sm-9">
</div>
<div class="col-sm-3">
    <h2>Recent Posts</h2>
    <ul>
    @foreach (var post in Enumerable.Take(Model.Posts, 10))
    {
        <li><a href="@Model.Root/blog/@post.Url/">@post.Title</a></li>
    }
    </ul>
</div>